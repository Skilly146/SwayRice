#!/bin/bash

# Array of class SLNs
# OS + all three quiz, Computer Networks + both quiz
readonly sln=(12915 12916 12917 12918 12927 12928 12929)
# 
readonly backup=()

# Not being used
if [[ $BACKUP = 1 ]]; then
    # If BACKUP is 1 (already registred for main classes) then register for backup courses
    for ((i = 0; i < ${#backup[@]}; i++)); do
        ydotool type ${backup[i]}
        # Tab 4 times to get to next class field
        for ((j = 0; j < 4; j++)); do
            ydotool key 15:1 15:0
        done
    done

else
    # If not BACKUP loop through each sln and use ydotool to type into page
    for ((i = 0; i < ${#sln[@]}; i++)); do
        ydotool type ${sln[i]}
        # Tab 4 times to get to next class field
        for ((j = 0; j < 4; j++)); do
            ydotool key 15:1 15:0
        done
    done
    # Some way to run backup after
fi

# Press enter to submit registration
ydotool key 28:1 28:0

